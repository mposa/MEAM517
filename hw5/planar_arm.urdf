<?xml version="1.0"?>
<robot name="planar_arm">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>
  <link name="link_one">
    <inertial>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="1.1" radius=".05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>
  <link name="link_two">
    <inertial>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="1.1" radius=".05"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>
  <link name="link_three">
    <inertial>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="1.1" radius=".05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>
  <link name="ball">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>
  <joint name="base_weld" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint>
  <joint name="joint_one" type="continuous">
    <parent link="base_link"/>
    <child link="link_one"/>
    <origin xyz="0 0.15 0"/>
    <axis xyz="0 1 0"/>
    <limit effort = "5"/>
    <dynamics damping="0.0"/>
  </joint>
  <joint name="joint_two" type="continuous">
    <parent link="link_one"/>
    <child link="link_two"/>
    <origin xyz="0 0.1 -1"/>
    <axis xyz="0 1 0"/>
    <limit effort = "5"/>
    <dynamics damping="0.0"/>
  </joint>
  <joint name="joint_three" type="continuous">
    <parent link="link_two"/>
    <child link="link_three"/>
    <origin xyz="0 0.1 -1"/>
    <axis xyz="0 1 0"/>
    <limit effort = "5"/>
    <dynamics damping="0.0"/>
  </joint>
  <joint name="fixed_ball" type="fixed">
    <parent link="link_three"/>
    <child link="ball"/>
    <origin xyz="0 0.1 -1"/>
    <axis xyz="0 1 0"/>
  </joint>
  <transmission type="SimpleTransmission" name="u1">
    <actuator name="motor_one"/>
    <joint name="joint_one"/>
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
  <transmission type="SimpleTransmission" name="u2">
    <actuator name="motor_two"/>
    <joint name="joint_two"/>
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
  <transmission type="SimpleTransmission" name="u3">
    <actuator name="motor_three"/>
    <joint name="joint_three"/>
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
  <frame name="hand" link="link_three" xyz="0 0 -1" rpy="0 0 0"/>
</robot>
